<div class="container mt-5">
  <h1 class="mb-4 text-center">Generate a New Board</h1>
  <div class="row justify-content-center">
  <% if @board.errors.any? %>
  <div class="alert alert-danger">
    <h4><%= pluralize(@board.errors.count, "error") %> prohibited this board from being created:</h4>
    <ul>
      <% @board.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
    <div class="col-md-6">
<%= form_with model: @board, url: boards_path, method: :post do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :width, class: "form-label" %>
          <%= f.number_field :width, class: "form-control" , min: 1 %>
        </div>
        <div class="mb-3">
          <%= f.label :height, class: "form-label" %>
          <%= f.number_field :height, class: "form-control", min: 1 %>
        </div>
        <div class="mb-3">
          <%= f.label :mines, class: "form-label" %>
          <%= f.number_field :mines, class: "form-control", min: 1 %>
        </div>
        <%= f.submit "Generate Board", class: "btn btn-primary w-100" %>
      <% end %>
    </div>
  </div>

  <h2 class="mt-5">Recent Boards</h2>
  <% if Board.any? %>
  <ul class="list-group">
    <% Board.order(created_at: :desc).limit(10).each do |board| %>
      <li class="list-group-item">
        <strong><%= link_to board.name, board %></strong> 
        by <%= board.email %> 
        on <%= board.created_at.strftime("%B %d, %Y %H:%M") %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="mt-3">There are no boards to display.</p>
<% end %>
</div>
<div class="mb-5"></div>
